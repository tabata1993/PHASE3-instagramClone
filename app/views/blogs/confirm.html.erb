<h1>以下の内容で投稿してよろしいでしょうか？</h1>
<%= form_with(model:@blog ,local:true ) do |f| %>
  <%= f.hidden_field :image_cache  %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>

<p>画像： <%= image_tag @blog.image %></p>
<p>title： <%= @blog.title %></p>
<p>content： <%= @blog.content %></p>

 <%= f.submit %>
<% end %>

<%= form_with(model: @blog ,url: new_blog_path ,local:true  ,method:'get' ) do |f| %>
  <%= f.hidden_field :image_cache %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.submit "戻る",name:'back' %>
<% end %>
