<% if @blog.errors.any? %>
  <% @blog.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_with( model:@blog,local:true ,url: choose_new_or_edit )do |f| %>
<% if @blog.image.url %>
        <label> 画像：</label>
        <P><%= @blog.image.url%><p>
        <div>
          <%= f.label :画像を変更する： %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
        </div>
      <% else %>
      <%= f.label :image %>
      <%= f.file_field :image %>
      <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
